Algoritmo "semnome"


Var

      divisao, numero : inteiro
      
Inicio
        escreva("Vamos verificar o primeiro numero :")
        leia(numero)
        
        se(numero % 2 = 0)entao
          escreva("esse numero é par")
        senao(numero % 2 = 1)
          escreva("esse numero é impar")
        fimse


       
       

Fimalgoritmo